{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templatesBaseUri": {
            "type": "string"
        },
        "AccessToken": {
            "type": "string",
            "metadata": {
                "description": "Token that will acces the private repo from the logic app"
            }
        },
        "branch": {
            "type": "string",
            "defaultValue": "feature/DSI-5680",
            "metadata": {
                "description": "Branch that use for the ARM templateLinks"
            }
        },
        "appServiceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the App Service"
            }
        },
        "appServicePlanName": {
            "type": "string",
            "metadata": {
                "description": "The App Service Plan name"
            }
        },
        "appServicePlanRG": {
            "type": "string",
            "metadata": {
                "description": "The App Service resource group"
            }
        },
        "virtualNetworkResourceGroupName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Resource group of the virtual network"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the virtual network"
            }
        },
        "subnetPrefix": {
            "type": "string",
            "defaultValue": "adtdbcln-sn",
            "metadata": {
                "description": "Prefix of the subnet to integrate the app service with"
            }
        },
        "auditDBName": {
          "type": "string"
        },
        "auditDBHostName": {
          "type": "string"
        },
        "auditDBUsername": {
          "type": "string"
        },
        "auditDBPassword": {
          "type": "string"
        },
        "bypass": {
            "type": "string",
            "defaultValue": "AzureServices"
        },
        "NetFirewall":{
            "type": "bool",
            "defaultValue": true
        },
        "appInsightsId": {
            "type": "string"
        }
    },
    "variables": {
        "enableVirtualNetworkIntegration": "[and(not(empty(parameters('virtualNetworkResourceGroupName'))), not(empty(parameters('virtualNetworkName'))))]",
        "serviceSubnetResourceId": "[resourceId(parameters('virtualNetworkResourceGroupName'),'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetPrefix'))]",
        "supMngSubnetResourceId": "[resourceId(parameters('virtualNetworkResourceGroupName'),'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), 'prestier-g4-sn')]",
        "storageAccountName": "[tolower(concat(replace(parameters('appServiceName'),'-',''),'st'))]",
        "storageAccountId": "[resourceId('Microsoft.Resources/deployments', variables('storageAccountName'))]",
        "ipSecurityRestrictions": [
            {
                "vnetSubnetResourceId": "[variables('supMngSubnetResourceId')]",
                "action": "Allow",
                "tag": "Default",
                "priority": 10,
                "name": "Support & Management Console"
            }
        ],
        "virtualNetworkRules": [
            {
                "id": "[variables('serviceSubnetResourceId')]",
                "action": "Allow",
                "state": "Succeeded"
            }
        ]
    },
    "resources": [
        {
            "name": "[variables('storageAccountName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templatesBaseUri'),'&repo=DFE-Digital/login.dfe.devops&ref=',parameters('branch'),'&token=', parameters('AccessToken'),'&file=templates/storage-account.json')]"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "NetFirewall":{
                        "value": "[parameters('NetFirewall')]"
                    },
                    "virtualNetworksSubNet": {
                        "value": "[variables('virtualNetworkRules')]"
                    },
                    "bypass":{
                        "value": "[parameters('bypass')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[parameters('appServiceName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templatesBaseUri'),'&repo=DFE-Digital/login.dfe.devops&ref=',parameters('branch'),'&token=', parameters('AccessToken'),'&file=templates/function-app.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[parameters('appServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('appServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[parameters('appServicePlanRG')]"
                    },
                    "functionAppAppSettings": {
                        "value": {
                            "array": [
                                {
                                  "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                  "value": "[parameters('appInsightsId')]"
                                },
                                {
                                  "name": "DATABASE_AUDIT_NAME",
                                  "value": "[parameters('auditDBName')]"
                                },
                                {
                                  "name": "DATABASE_AUDIT_NAME_HOST",
                                  "value": "[parameters('auditDBHostName')]"
                                },
                                {
                                  "name": "DATABASE_AUDIT_USERNAME",
                                  "value": "[parameters('auditDBUsername')]"
                                },
                                {
                                  "name": "DATABASE_AUDIT_PASSWORD",
                                  "value": "[parameters('auditDBPassword')]"
                                },
                                {
                                  "name": "FUNCTIONS_WORKER_RUNTIME",
                                  "value": "dotnet"
                                },
                                {
                                  "name": "AzureWebJobsStorage",
                                  "value": "[reference(variables('storageAccountName')).outputs.storageAccountConnectionString.value]"
                                },
                                {
                                  "name": "FUNCTIONS_EXTENSION_VERSION",
                                  "value": "~4"
                                },
                                {
                                  "name": "StorageAccountConnectionString",
                                  "value": "[reference(variables('storageAccountName')).outputs.storageAccountConnectionString.value]"
                                }
                            ]
                        }
                    },
                    "subnetResourceId": {
                        "value": "[variables('serviceSubnetResourceId')]"
                    },
                    "ipSecurityRestrictions": {
                        "value": "[variables('ipSecurityRestrictions')]"
                    }
                }
            },
            "dependsOn": [
              "[variables('storageAccountId')]"
            ]
        }
    ]
}